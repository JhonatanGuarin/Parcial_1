<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('./templates/header.ejs')%>
        <title>Ventas</title>
</head>

<body>
    <%-include('./templates/navigation.ejs')%>

    <div class="container p-4">
        <form method="POST" action="/sales" class="card card-body">

            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownPais" data-bs-toggle="dropdown" aria-expanded="false">
                  Selecciona un producto para vender
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownPais">
                  <% Object.entries(products).forEach(([code, product])=> { %>
                    <a class="dropdown-item" href="#"><%= product.description %></a>
                  <% }) %>
                </div>
            </div>
            <div class="form-group">
                <label for="autor">Cantidad</label>
                <input type="text" class="form-control" name="cantidad" id="cantodad" placeholder="cantidad" required>    
            </div>

            <input type="submit" value="Guardar Libro" class="btn btn-primary" >
        </form>
    </div>
    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%-include('./templates/footer.ejs')%>
</body>

</html>